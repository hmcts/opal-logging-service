{
  "connectionString": "${file:/mnt/secrets/opal/app-insights-connection-string}",
  "role": {
    "name": "opal-logging-service"
  },
  "sampling": {
    "overrides": [
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "http.url",
            "value": "https?://[^/]+/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 1
      }
    ]
  }
}
